{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["node_modules/@types", "types/"],
    "baseUrl": "./src",
    "paths": {
      "@images": ["./assets/images"],
      "@images/*": ["./assets/images/*"],

      "@style": ["./assets/style"],
      "@style/*": ["./assets/style/*"],

      "@components": ["./components"],
      "@components/*": ["./components/*"],

      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],

      "@elements": ["./elements"],
      "@elements/*": ["./elements/*"],

      "@modules": ["./modules"],
      "@modules/*": ["./modules/*"],

      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],

      "@state": ["./state"],
      "@state/*": ["./state/*"],

      "@type": ["./types"],
      "@type/*": ["./types/*"],

      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],

      "@services": ["./services"],
      "@services/*": ["./services/*"],
    }
  },
  "homepage": ".",
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
